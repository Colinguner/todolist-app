<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
      
    <% newListItems.forEach(function(newItem){ %>
      <form action="/delete" method="POST">
        <div class="item">
          <input type="checkbox" value="<%=newItem._id%>" name="checkbox" onChange="this.form.submit()">
           <p name="pItem"><%=  newItem.name  %></p>
         </div>
         <input type="hidden" name="listName" value="<%= listTitle %>"></input>
       </form>  
    <% }); %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" class="span_button" name="list" value="<%= listTitle %>"><span>+</span></button>
    </form>
  </div>

<%- include("footer") -%>
